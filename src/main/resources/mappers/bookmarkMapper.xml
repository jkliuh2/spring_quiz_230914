<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.lesson06.mapper.BookmarkMapper">
 	<!--  전체 테이블 select -->
 	<select id="selectBookmark" resultType="com.quiz.lesson06.domain.Bookmark">
 	SELECT
 		`id`
		,`name`
		,`url`
		,`createdAt`
		,`updatedAt`
	FROM
		`bookmark`
 	</select>
 	
 	<!-- insert -->
 	<insert id="insertBookmark" parameterType="map">
 	INSERT INTO `bookmark`
 	(
		`name`
		,`url`
		,`createdAt`
		,`updatedAt` 	
 	)
 	VALUES
 	(
 		#{name}
 		, #{url}
 		, NOW()
 		, NOW()
 	)
 	</insert>
 	
 	<!-- url 중복 확인 / count => 0:false, 그 외:true -->
 	<select id="isDuplicationByUrl" parameterType="string" 
 	resultType="boolean">
 	SELECT
 		count(*)
 	FROM
 		`bookmark`
 	WHERE `url` = #{url}
 	</select>
 	
 	<!-- id로 delete -->
 	<delete id="deleteBookmarkById" parameterType="int">
 	DELETE
 	FROM
 		`bookmark`
 	WHERE `id` = #{id}
 	</delete>
 </mapper>